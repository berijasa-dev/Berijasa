{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {                  
            "~assets/*" : ["./assets/*"],           /* A series of entries which re-map imports to lookup locations relative to the 'baseUrl'. */
            "~src/*" : ["./src/*"],
            "~screens/*" : ["./src/screens/*"],  
        },
        "allowSyntheticDefaultImports": true,
        "importHelpers": true
    }
}
